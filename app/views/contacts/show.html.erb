<div class="grid grid-flow-row auto-rows-max border-b-2">
  <div class="w-fit relative left-1/2">
    <div class="relative right-1/2 top-3 text-2xl">
      <%= render @contact %>
    </div>
  </div>
  <div class="flex flex-wrap justify-around mt-4">
    <% @categories.each do |category| %>
      <% @category = category %>
      <% if @contact.categories.include?(category) %>
        <%= render "remove_from_category" %>
      <% else %>
        <%= render "add_to_category" %>
      <% end %>
    <% end %>
  </div>
  <div class="w-fit relative left-1/2">
    <%= link_to edit_contact_path(@contact) do %>
      <div class="button relative right-1/2 m-5">
        Edit this contact
      </div>
    <% end %>
    <%= link_to @contact, data: { "turbo-method": "delete",
                                                         "turbo-confirm": "Are you sure?" }  do %>
      <div class="button relative right-1/2 m-5">
        Delete this contact
      </div>
    <% end %>
  </div>
</div>